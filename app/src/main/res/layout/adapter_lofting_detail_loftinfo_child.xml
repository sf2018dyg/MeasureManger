<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llfchild"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivfStart"
            android:layout_width="@dimen/dp_2"
            android:layout_height="13dp"
            android:src="@color/text_bule"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tvfLoftingStatus"
            style="@style/text_12sp_gray_style"
            android:textColor="@color/text_bule"
            android:text="已放样"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tvfLfMember"
            style="@style/text_12sp_black_style"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/ivfStart"
            android:layout_toLeftOf="@+id/tvfLoftingStatus"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="门洞"
            android:maxLines="2"
            android:ellipsize="end"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:id="@+id/ivbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dotted_line"
            android:layerType="software"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"/>
    </LinearLayout>
</LinearLayout>