<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/bg_normal_color"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txtbillno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="1"
        android:textColor="@color/text"
        android:textSize="14sp" />

    <com.pkmmte.view.CircularImageView
        android:id="@+id/ivhead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_s"
        app:shadow="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/txtnum"
        android:layout_marginLeft="110dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txtdesignerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吴婷婷"
            android:textColor="@color/text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtdesignFamous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="设计,我们是认真的"
            android:textColor="@color/colorAccent"
            android:textSize="11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:text="￥15254" />

    <View
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>