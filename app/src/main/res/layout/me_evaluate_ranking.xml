                        android:layout_gravity="center_vertical"
                        android:textColor="@color/text"
                        android:textSize="@dimen/sp_13"
                        android:text="@string/personal_center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

