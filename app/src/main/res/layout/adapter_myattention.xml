<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llfItem"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:background="@color/white">
        <com.soonfor.measuremanager.view.RoundImageView
            android:id="@+id/imgpath"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/head_right"
            android:src="@drawable/avatar_default"
            android:layout_margin="@dimen/dp_12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toRightOf="@+id/imgpath"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvfName"
                        style="@style/text_13sp_black_style"
                        android:ellipsize="end"
                        android:maxLines="3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    >
                    <TextView
                        style="@style/text_12sp_gray_style"
                        android:text="粉丝"
                        android:layout_marginRight="@dimen/dp_6"/>
                    <TextView
                        android:id="@+id/fens"
                        style="@style/text_12sp_gray_style"
                        android:text="12"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_12"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvfAddress"
                        style="@style/text_13sp_gray_style"
                        android:layout_marginRight="@dimen/dp_12"
                        android:drawableLeft="@mipmap/icn_address2"
                        android:drawablePadding="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    >
                    <TextView
                        android:id="@+id/tvfExperience"
                        style="@style/text_12sp_gray_style"
                        android:text="10年设计经验" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/showSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imgpick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/icn_pick" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/imgpick"
                android:background="#fd0d29"></View>

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line"
        android:layout_below="@+id/imgpath"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"/>
</LinearLayout>