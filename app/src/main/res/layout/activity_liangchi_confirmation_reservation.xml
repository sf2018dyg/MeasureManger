<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:titleTextColor="@android:color/white"
        app:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/ivfLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_gravity="left"
            android:src="@mipmap/btn_back"/>
        <ImageView
            android:id="@+id/ivMiddle"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/ivfLeft"
            android:background="#999999"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/ivMiddle"
            android:paddingLeft="14dp"
            android:paddingRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tvfTitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写预约信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_normal_color"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:focusable="true"
                    android:text="客户"/>

                <TextView
                    android:id="@+id/customtxt"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="客户手机"/>

                <TextView
                    android:id="@+id/customPhone"
                    style="@style/text_14sp_black_style"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@mipmap/icon_call"
                    android:drawablePadding="@dimen/dp_5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="导购"/>

                <TextView
                    android:id="@+id/tvfDaoGou"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_14sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="导购手机"/>

                <TextView
                    android:id="@+id/shoppingGuide"
                    style="@style/text_15sp_black_style"
                    android:layout_alignParentEnd="true"
                    android:drawableLeft="@mipmap/icon_call"
                    android:drawablePadding="@dimen/dp_5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="楼盘"/>

                <TextView
                    android:id="@+id/txtbuliding"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="客户地址"/>

                <TextView
                    android:id="@+id/txtadress"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:id="@+id/llfSelectTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="预约量尺时间"/>

                <TextView
                    android:id="@+id/txtAppointDate"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_gray_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="预约描述"/>

                <TextView
                    android:id="@+id/txtAppointDesc"
                    style="@style/text_14sp_black_style"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:maxLines="2" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_black_style"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_width="120dp"
                    android:text="确认预约时间"/>

                <TextView
                    android:id="@+id/appointmentTime"
                    style="@style/text_14sp_gray_style"
                    android:text="请选择(必填)"
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:ellipsize="end"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bg_normal_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:orientation="horizontal"
                android:background="@drawable/bg_round_corner">

                <TextView
                    style="@style/text_15sp_black_style"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:layout_width="120dp"
                    android:text="任务描述"/>

                <EditText
                    android:id="@+id/subscribeDescribe"
                    style="@style/text_14sp_black_style"
                    android:layout_height="@dimen/dp_100"
                    android:hint="请输入任务描述(必填)"
                    android:layout_width="match_parent"
                    android:maxLines="5"
                    android:maxEms="1000"
                    android:gravity="top|left"
                    android:background="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/lccolor"
            android:gravity="center">

            <TextView
                style="@style/text_15sp_white_style"
                android:text="保存"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
