<?xml version="1.0" encoding="utf-8"?>
<com.soonfor.measuremanager.view.floatactionbutton.MyCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llftop"
            android:layout_width="match_parent"
            android:layout_height="204dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/bg" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/icon_address"
                android:drawablePadding="@dimen/dp_5"
                android:text="广州 | 梦天旗舰店"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <com.soonfor.gallerlib.GallerViewPager
                android:id="@+id/Advertisement"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/dp_44"
                android:clipChildren="true"
                />

            <RelativeLayout
                android:id="@+id/rlnewsmsg"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center">

                <ImageView
                    android:id="@+id/newsmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_message" />
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:id="@+id/llfbody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/llfTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_16"
                            android:src="@color/lccolor" />

                        <TextView
                            android:id="@+id/tvlcrw_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="量尺任务"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView1"
                        style="@style/recycler_view_style"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txtLiangchiError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_16"
                            android:src="@color/sjcolor" />

                        <TextView
                            android:id="@+id/tvsjrw_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="设计任务"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        style="@style/recycler_view_style"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txtShejiError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_16"
                            android:src="@color/fccolor" />

                        <TextView
                            android:id="@+id/tvfcrw_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="复尺任务"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView3"
                        style="@style/recycler_view_style"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txtFuchiError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_16"
                            android:src="@color/red" />

                        <TextView
                            android:id="@+id/tvfyrw_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="放样任务"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView4"
                        style="@style/recycler_view_style"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txtFangyangError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_2"
                            android:layout_height="@dimen/dp_16"
                            android:src="@color/fycolor" />

                        <TextView
                            android:id="@+id/tvfOtherTask"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="其它任务"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvfOther"
                        style="@style/recycler_view_style"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/txtOtherError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:visibility="gone"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="设计师业绩TOP10"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/lightTxt"
                            style="@style/light_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="我的业绩: 0" />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/bg_normal_color" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/topAchievement"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:scrollbars="none"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/txtShejishiyejiError"
                                style="@style/text_13sp_gray_style"
                                android:text="暂无数据"
                                android:layout_marginLeft="@dimen/dp_12"
                                android:layout_marginBottom="@dimen/dp_12"
                                android:layout_marginTop="@dimen/dp_12"/>
                        </RelativeLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_corner"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="设计热帖"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tvmore"
                            style="@style/light_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:drawablePadding="@dimen/dp_5"
                            android:drawableRight="@mipmap/icon_next"
                            android:text="更多" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/topPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txtRetieError"
                        style="@style/text_13sp_gray_style"
                        android:text="暂无数据"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <com.soonfor.measuremanager.view.floatactionbutton.DraggableFloatingButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="50dp">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="0dp"
            android:src="@mipmap/btn_qiang"
            app:backgroundTint="@color/transparent"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            app:pressedTranslationZ="0dp" />

        <TextView
            android:id="@+id/tvqiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="9dp"
            android:text="抢"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvqiangnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:text="(0)"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </com.soonfor.measuremanager.view.floatactionbutton.DraggableFloatingButton>

</com.soonfor.measuremanager.view.floatactionbutton.MyCoordinatorLayout>


