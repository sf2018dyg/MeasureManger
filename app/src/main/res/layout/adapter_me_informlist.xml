<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_12"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgfInformType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@mipmap/icn_citong"
            android:layout_marginRight="@dimen/dp_12"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvfInformName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/text"
                    android:text="系统通知"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tvfStatus"
                    android:layout_marginRight="8dp"
                    android:singleLine="true"
                    android:ellipsize="end" />
                <TextView
                    android:id="@+id/tvfStatus"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:text="未读"
                    android:textSize="11sp"
                    android:textColor="@color/text_selector_while_gray"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/myinform_isread_bg"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvfInformTime"
                style="@style/text_12sp_gray_style"
                android:text="2018年1月10日 12:20"
                android:layout_marginBottom="@dimen/dp_2"/>
            <TextView
                android:id="@+id/tvfInformContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#f0f0f0"
                android:text="恭喜"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:background="@color/line_color"
        android:layout_marginTop="@dimen/dp_12"/>

</LinearLayout>