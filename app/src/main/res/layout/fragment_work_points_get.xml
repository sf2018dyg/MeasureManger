<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/workpoint_client" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_1"
            android:layout_toEndOf="@+id/img_1"
            android:layout_toRightOf="@+id/img_1"
            android:text="每日签到"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_1"
            android:layout_toRightOf="@id/img_1"
            android:layout_marginTop="4dp"
            android:text="签到得积分，连续签到抽大奖获取"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_1"
            android:layout_toRightOf="@id/img_1"
            android:text="10工分"
            android:textColor="@color/red"
            android:textSize="10sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <TextView
        style="@style/line_gray_style"
        android:layout_height="8dp"
        android:background="@color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_bind_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/workpoint_binding" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_2"
                android:layout_toEndOf="@+id/img_2"
                android:layout_toRightOf="@+id/img_2"
                android:text="绑定手机号"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_4"
                android:layout_toRightOf="@id/img_2"
                android:layout_marginTop="4dp"
                android:text="新用户绑定手机号码并验证获取"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_2"
                android:layout_toRightOf="@id/img_2"
                android:text="60工分"
                android:textColor="@color/red"
                android:textSize="10sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <TextView style="@style/line_gray_style" />
        <RelativeLayout
            android:id="@+id/relative_register_new_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/workpoint_newclient" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_3"
                android:layout_toEndOf="@+id/img_3"
                android:layout_toRightOf="@+id/img_3"
                android:text="登记新客户"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_7"
                android:layout_toRightOf="@id/img_3"
                android:layout_marginTop="4dp"
                android:text="每登记一个客户获取"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_3"
                android:layout_toRightOf="@id/img_3"
                android:text="80工分"
                android:textColor="@color/red"
                android:textSize="10sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <TextView style="@style/line_gray_style" />
        <RelativeLayout
            android:id="@+id/relative_complete_the_monthly_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/workpoint_finishgoal" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_4"
                android:layout_toEndOf="@+id/img_4"
                android:layout_toRightOf="@+id/img_4"
                android:text="完成每月目标"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_8"
                android:layout_toRightOf="@id/img_4"
                android:layout_marginTop="4dp"
                android:text="完成每月目标获取"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_4"
                android:layout_toRightOf="@id/img_4"
                android:text="200工分"
                android:textColor="@color/red"
                android:textSize="10sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <TextView style="@style/line_gray_style" />
    </LinearLayout>
</LinearLayout>