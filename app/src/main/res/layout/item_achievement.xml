<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.pkmmte.view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="45dp"
            android:layout_height="45dp">

            <com.pkmmte.view.CircularImageView
                android:id="@+id/ivhead"
                android:layout_width="43.1dp"
                android:layout_height="43.1dp"
                android:src="@mipmap/default_s"
                android:scaleType="fitCenter"
                app:border="true"
                app:border_color="#16f5f5f5"
                app:border_width="8dp"
                app:selector="true"
                app:selector_color="#4D000000"
                app:selector_stroke_color="#16f5f5f5"
                app:selector_stroke_width="8dp"
                app:shadow="false"/>

            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ranking_first" />

            <TextView
                android:id="@+id/tv_number"
                style="@style/normal_text_style"
                android:layout_width="18.5dp"
                android:layout_height="18.5dp"
                android:text="1"
                android:gravity="center"
                android:layout_gravity="bottom|end"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="青山"
            android:textColor="#888888"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>


</RelativeLayout>