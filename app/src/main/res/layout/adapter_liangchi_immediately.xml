<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llfItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/custom_select_item_bg"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/llfImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:padding="0.5dp"
                    android:background="@drawable/button_jushou_bg">
                    <ImageView
                        android:id="@+id/imgpath"
                        android:layout_width="120dp"
                        android:layout_height="76dp"
                        android:src="@mipmap/zanuw"
                        android:scaleType="fitXY"
                        android:background="@color/white"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/clickllr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@+id/llfImg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvfcustom"
                        style="@style/text_13sp_black_style" />

                    <TextView
                        android:id="@+id/tvfhuxingtype"
                        style="@style/text_13sp_gray_style"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/clickrrl"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_100"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/imgfDelete"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="@dimen/dp_12"
                        android:src="@mipmap/delete"
                        android:layout_alignParentTop="true"
                        android:visibility="invisible"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_next"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

            </RelativeLayout>

            <TextView style="@style/line_gray_style" />

            <RelativeLayout
                android:id="@+id/llfbtnbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/text_13sp_gray_style"
                    android:text="修改时间:" />

                <TextView
                    android:id="@+id/tvfmodifytime"
                    style="@style/text_13sp_gray_style"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_toEndOf="@+id/textView3"
                    android:text="" />

                <TextView
                    android:id="@+id/tvfstatus"
                    style="@style/text_13sp_gray_style"
                    android:layout_alignParentEnd="true"
                    android:text="待量尺"
                    android:textColor="@color/orange" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>