<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="客户" />

        <TextView
            android:id="@+id/tvfCustomer"
            style="@style/text_14sp_black_style" />

        <TextView
            android:id="@+id/tvfCustomerPhone"
            style="@style/text_14sp_black_style"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_call"
            android:drawablePadding="@dimen/dp_5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            android:id="@+id/tvMeasurerT"
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="导购员" />

        <TextView
            android:id="@+id/tvfMeasurer"
            style="@style/text_14sp_black_style" />

        <TextView
            android:id="@+id/tvfMeasurerPhone"
            style="@style/text_14sp_black_style"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_call"
            android:drawablePadding="@dimen/dp_5" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="户型" />

        <TextView
            android:id="@+id/tvfHouseType"
            style="@style/text_14sp_black_style"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="面积" />

        <TextView
            android:id="@+id/tvfArea"
            style="@style/text_14sp_black_style"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="预计装修日期" />

        <TextView
            android:id="@+id/tvfPredictFitmentDate"
            style="@style/text_14sp_black_style"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_12">

        <TextView
            style="@style/text_15sp_gray_style"
            android:layout_width="120dp"
            android:layout_gravity="center_vertical"
            android:text="初步沟通需求" />

        <TextView
            android:id="@+id/tvfGtRequirements"
            style="@style/text_14sp_black_style"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:maxLines="2"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_normal_color" />
    <TextView
        style="@style/text_15sp_gray_style"
        android:layout_margin="@dimen/dp_12"
        android:text="意向产品"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_normal_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12">
            <TextView
                style="@style/text_15sp_gray_style"
                android:layout_margin="@dimen/dp_14"
                android:text="系列"/>
            <TextView
                android:id="@+id/tvfSerize"
                style="@style/text_14sp_black_style"
                android:layout_margin="@dimen/dp_14"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_normal_color" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_12">
            <TextView
                style="@style/text_15sp_gray_style"
                android:layout_margin="@dimen/dp_14"
                android:text="款式"
                />
            <TextView
                android:id="@+id/tvfStyle"
                style="@style/text_14sp_black_style"
                android:layout_margin="@dimen/dp_14"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:background="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>