<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvfDesignPicsName"
            style="@style/text_15sp_black_style"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tvfDesignPicsNo"/>
        <TextView
            android:id="@+id/tvfDesignPicsNo"
            style="@style/text_14sp_gray_style"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/tvfDesignPicsName"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner"
        android:paddingTop="@dimen/dp_10">

        <com.lzy.ninegrid.NineGridView
            android:id="@+id/nineGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ngv_gridSpacing="8dp"
            app:ngv_maxSize="3"
            app:ngv_singleImageSize="100dp"
            app:ngv_mode="grid" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <FrameLayout
            android:id="@+id/flfQuanjing"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:paddingEnd="2dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@mipmap/icon_quanjing_bg"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@mipmap/icon_quanjing"/>
                <TextView
                    style="@style/text_14sp_gray_style"
                    android:textColor="@color/white"
                    android:text="前往查看720度全景图"
                    android:layout_marginLeft="4dp"
                    />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:paddingStart="4dp">
            <RelativeLayout
                android:id="@+id/rlfShare"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/button_jieshou_bg"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_share"/>
                    <TextView
                        style="@style/text_14sp_gray_style"
                        android:textColor="@color/red"
                        android:text="分享"
                        android:layout_marginLeft="4dp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="@color/white">
        <View
            android:id="@+id/ivbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dotted_line"
            android:layerType="software"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>