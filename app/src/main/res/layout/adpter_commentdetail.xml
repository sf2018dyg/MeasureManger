<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_12"
            android:paddingTop="@dimen/dp_12">

            <TextView
                android:id="@+id/txthuifuzhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@color/text_bule"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text=":"
                android:textColor="@color/text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtbeihuifuzhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="/@text"
                android:textColor="@color/text_bule"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtcomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="texttexttext"
                android:textColor="@color/text"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtclickhuifu"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:background="@color/bg_normal_color"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:text="回复"
            android:textColor="@color/text_prompt"
            android:layout_marginRight="@dimen/dp_12"
            android:textSize="12sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_normal_color" />
</LinearLayout>