<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llfItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_select_item_bg"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:id="@+id/rlfimgpath"
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/button_jushou_bg">

                    <ImageView
                        android:id="@+id/imgpath"
                        android:layout_width="120dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/rlfimgpath"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_toRightOf="@+id/rlfimgpath"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvfcustom"
                        style="@style/text_13sp_black_style"
                        android:text="万科金苑-张宝国" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvfhuxingtype"
                            style="@style/text_13sp_gray_style"
                            android:text="1层户型" />

                        <TextView
                            android:id="@+id/tvfmeasureArea"
                            style="@style/text_13sp_gray_style"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="360m2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvfadress"
                        style="@style/text_13sp_gray_style"
                        android:layout_marginTop="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="天河区北海路万科金香苑2栋天河区北海路万科金香苑2栋" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/showSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/imgpick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@mipmap/icn_pick" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_below="@+id/imgpick"
                        android:background="#fd0d29"></View>


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>