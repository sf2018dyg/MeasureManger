<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.pkmmte.view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">
    <LinearLayout
        android:id="@+id/llfItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_12">
        <TextView
            android:id="@+id/tvfAmmounTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    android:id="@+id/tvfAnnTitle"
                    style="@style/text_14sp_black_style"
                    android:layout_alignParentStart="true"/>
                <TextView
                    style="@style/text_12sp_gray_style"
                    android:id="@+id/tvfAmmounDate"
                    android:layout_alignParentEnd="true"
                    android:gravity="bottom"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgcover"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/zanuw"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"/>
            <TextView
                android:id="@+id/tvfContent"
                style="@style/text_12sp_black_style"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/dp_10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="@color/space_line" />

            <LinearLayout
                android:id="@+id/llfLookDetail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/icn_link"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_6"
                    />
                <TextView
                    style="@style/text_13sp_black_style"
                    android:textColor="#0599FD"
                    android:text="查看详情"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>