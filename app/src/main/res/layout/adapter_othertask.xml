<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_select_item_bg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/llfItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability= "blocksDescendants"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <TextView
                    android:id="@+id/tvfTaskTitle"
                    style="@style/text_15sp_black_style"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tvftypes"
                        style="@style/text_14sp_gray_style"
                        android:textColor="@color/lccolor"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16sp"
                        android:src="@mipmap/icon_next"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView style="@style/line_gray_style"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingEnd="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toLeftOf="@+id/flQiang"
                    android:layout_marginLeft="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:id="@+id/rlfChangePhoto"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            >
                            <ImageView
                                android:id="@+id/img_pic"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@mipmap/btn_huaxiang"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="@dimen/dp_2"
                                />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tvName"
                            style="@style/text_14sp_black_style"
                            android:layout_gravity="center_vertical"
                            android:maxLength="16"
                            android:textColor="@color/text"
                            android:layout_marginRight="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/tvfPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:maxLength="11"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        >
                        <RelativeLayout
                            android:id="@+id/rlfAddress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            >
                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="20dp"
                                android:adjustViewBounds="true"
                                android:background="@mipmap/icn_address2"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginBottom="@dimen/dp_2"
                                />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tvfBuilding"
                            style="@style/text_13sp_black_style"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        >
                        <TextView
                            android:id="@+id/tvfTiemTitle"
                            style="@style/text_13sp_gray_style"
                            android:text="执行时间："/>
                        <TextView
                            android:id="@+id/tvfExecuteDate"
                            style="@style/text_13sp_black_style"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView style="@style/line_gray_style"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/icon_gongfen"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    style="@style/text_14sp_gray_style"
                    android:textColor="@color/fycolor"
                    android:text="工分"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    />

                <TextView
                    android:id="@+id/tvfWorkpoints"
                    style="@style/text_14sp_gray_style"
                    android:textColor="@color/fycolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2">
                <Button
                    android:id="@+id/btnUpdateTaskResult"
                    style="@style/adpter_btn_common"
                    android:text="更新任务结果"/>
                <Button
                    android:id="@+id/btnLookDisDetail"
                    style="@style/adpter_btn_common"
                    android:text="查看处理详情"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>