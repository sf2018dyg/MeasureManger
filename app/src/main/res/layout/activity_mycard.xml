<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:imagecontrol="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="top">

                <ImageView
                    android:id="@+id/imgpath"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zanuw" />

                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/btn_back" />

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@mipmap/btn_share" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/text_12sp_gray_style"
                        android:textColor="@color/white"
                        android:text="人气"
                        />
                    <TextView
                        android:id="@+id/tvfPopularity"
                        style="@style/text_14sp_black_style"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/text_12sp_gray_style"
                        android:textColor="@color/white"
                        android:text="业绩"
                        />
                    <TextView
                        android:id="@+id/tvfPerformance"
                        style="@style/text_14sp_black_style"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/transparent">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/text_12sp_gray_style"
                        android:textColor="@color/white"
                        android:text="粉丝"
                        />
                    <TextView
                        android:id="@+id/tvfFens"
                        style="@style/text_14sp_black_style"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        style="@style/text_12sp_gray_style"
                        android:textColor="@color/white"
                        android:text="收藏"
                        />
                    <TextView
                        android:id="@+id/tvfFavourite"
                        style="@style/text_14sp_black_style"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/transparent"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal">
                <com.soonfor.measuremanager.view.RoundImageView
                    android:id="@+id/avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/head_right"
                    android:src="@drawable/avatar_default"
                    imagecontrol:border_inside_color="#ffffff"
                    imagecontrol:border_thickness="3dp"
                    />
            </LinearLayout>
        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/llfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/tvfName"
                    style="@style/text_16sp_black_style"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="2dp"
                    android:text="FuYUIOnG"
                    android:layout_gravity="center_horizontal"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvfCity"
                        style="@style/text_13sp_gray_style"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:drawablePadding="@dimen/dp_5"
                        android:drawableLeft="@mipmap/icn_address2"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="14sp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@color/white"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/tv_storeName"
                        style="@style/text_13sp_gray_style"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/bg_color"
                android:layout_below="@+id/llfName"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_6">
                <TextView
                    style="@style/text_13sp_gray_style"
                    android:text="设计经验："/>
                <TextView
                    android:id="@+id/tvfDesignJy"
                    style="@style/text_13sp_black_style"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_6">
                <TextView
                    style="@style/text_13sp_gray_style"
                    android:text="擅长风格："/>
                <TextView
                    android:id="@+id/tvfGoodStyle"
                    style="@style/text_13sp_black_style"
                    android:maxLines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_10">
                <TextView
                    style="@style/text_13sp_gray_style"
                    android:text="设计体验："/>
                <TextView
                    android:id="@+id/tvfDesignLy"
                    style="@style/text_13sp_black_style"
                    android:maxLines="3"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14">
            <LinearLayout
                android:id="@+id/llfTablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.TabLayout
                    android:id="@+id/tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    app:tabIndicatorColor="@color/red"
                    app:tabMode="fixed"
                    app:tabPaddingEnd="@dimen/dp_20"
                    app:tabPaddingStart="@dimen/dp_20"
                    app:tabSelectedTextColor="@color/red"
                    app:tabTextColor="@color/text_prompt" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.2"
                    android:background="@color/bg_color" />
            </LinearLayout>

            <com.soonfor.measuremanager.view.NoScrollViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>