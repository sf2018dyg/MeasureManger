<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relative_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/item_img_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            android:src="@drawable/workpoint_client" />

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_img_pic"
            android:layout_toEndOf="@+id/item_img_pic"
            android:layout_toRightOf="@+id/item_img_pic"
            android:textSize="12sp"
            android:text="每日签到"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_img_pic"
            android:layout_toEndOf="@+id/item_img_pic"
            android:layout_toRightOf="@+id/item_img_pic"
            android:layout_marginTop="4dp"
            android:text="2018-01-10 10:23"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_tv_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="10工分"
            android:textColor="@color/red"
            android:textSize="10sp" />


    </RelativeLayout>
</LinearLayout>