<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgbg"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="fitXY"
        android:src="@mipmap/bg_paihangbang" />

    <com.soonfor.measuremanager.view.FlycoTabLayout_Lib.CommonTabLayout
        android:id="@+id/tl_1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#00eb443a"
        tl:tl_iconVisible="false"
        tl:tl_indicator_width="70dp"
        tl:tl_textsize="18sp" />

    <TextView
        android:id="@+id/describeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tl_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="[ text ]"
        android:textColor="#febbb3"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/describeTxt"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <com.soonfor.measuremanager.view.HexagonImageView
                android:id="@+id/img_second"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                tl:civ_border_color="@color/white"
                android:layout_marginTop="7dp"
                tl:civ_border_width="0dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/number_2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="45dp"
                android:text="2"/>

            <TextView
                android:id="@+id/txt_second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="22dp"
                android:text="我是样本"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtd_second_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:drawableLeft="@mipmap/icn_dianzan"
                android:drawablePadding="5dp"
                android:text="88888"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:layout_weight="1">

            <com.soonfor.measuremanager.view.HexagonImageView
                android:id="@+id/img_first"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                tl:civ_border_color="@color/white"
                android:layout_marginTop="7dp"
                tl:civ_border_width="0dp" />

            <ImageView
                android:layout_width="95dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/number_1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:text="1"/>

            <TextView
                android:id="@+id/txt_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:text="我是样本"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtd_first_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@mipmap/icn_dianzan"
                android:drawablePadding="5dp"
                android:text="88888"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="bottom"
            android:layout_weight="1">

            <com.soonfor.measuremanager.view.HexagonImageView
                android:id="@+id/img_three"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                tl:civ_border_color="@color/white"
                android:layout_marginTop="7dp"
                tl:civ_border_width="0dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/number_3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="45dp"
                android:text="2"/>

            <TextView
                android:id="@+id/txt_three_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="22dp"
                android:text="我是样本"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtd_three_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="6dp"
                android:drawableLeft="@mipmap/icn_dianzan"
                android:drawablePadding="5dp"
                android:text="88888"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlmid"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@+id/imgbg"
        android:background="@color/c7c7c7"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排名"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计师"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_marginLeft="60dp"/>

        <TextView
            android:id="@+id/tl_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="业绩"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvbillboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlmid"/>
</RelativeLayout>