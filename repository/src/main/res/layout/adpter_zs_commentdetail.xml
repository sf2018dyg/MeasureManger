<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/tvfContent"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/tvfReply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_bule"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginRight="@dimen/dp_10"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvfReply"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_button_gray2"
            android:layout_alignParentEnd="true"
            android:text="回复"
            android:textSize="12sp"
            android:textColor="@color/text_prompt"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_normal_color"/>
</LinearLayout>